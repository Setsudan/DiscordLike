<UserControl x:Class="DiscordLikeChatApp.Views.Components.UserSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiscordLikeChatApp.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <!-- Informations de profil -->
            <TextBlock Text="Informations de Profil" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Nom :" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="UserNameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Email :" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="UserEmailTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Avatar :" Width="100" VerticalAlignment="Center"/>
                <Button Content="Changer Avatar" Click="OnChangeAvatarClick"/>
            </StackPanel>

            <!-- Paramètres de compte -->
            <TextBlock Text="Paramètres de Compte" FontSize="20" FontWeight="Bold" Margin="20,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Mot de Passe Actuel :" Width="150" VerticalAlignment="Center"/>
                <PasswordBox x:Name="CurrentPasswordBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Nouveau Mot de Passe :" Width="150" VerticalAlignment="Center"/>
                <PasswordBox x:Name="NewPasswordBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Confirmer Mot de Passe :" Width="150" VerticalAlignment="Center"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Width="200"/>
            </StackPanel>
            <Button Content="Changer Mot de Passe" Click="OnChangePasswordClick" Margin="0,0,0,10"/>

            <!-- Réglages de notification -->
            <TextBlock Text="Réglages de Notification" FontSize="20" FontWeight="Bold" Margin="20,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Notifications par Email :" Width="200" VerticalAlignment="Center"/>
                <CheckBox x:Name="EmailNotificationsCheckBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Notifications par SMS :" Width="200" VerticalAlignment="Center"/>
                <CheckBox x:Name="SmsNotificationsCheckBox"/>
            </StackPanel>
            <Button Content="Enregistrer les Réglages" Click="OnSaveSettingsClick" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>

